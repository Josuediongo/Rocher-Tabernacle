<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Modifier une catégorie</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" href="/images/logo3.jpg">

  <!-- Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <!-- Font Awesome -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    rel="stylesheet"
  />
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="mb-4 text-primary">
      <i class="fas fa-edit"></i> Modifier la catégorie
    </h2>

    <form action="/categories/<%= categorie.id %>/update" method="POST" enctype="multipart/form-data">
      <!-- Nom -->
      <div class="mb-3">
        <label for="nom" class="form-label">Nom</label>
        <input
          type="text"
          id="nom"
          name="nom"
          class="form-control"
          value="<%= categorie.nom %>"
          required
        />
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="description"
          class="form-control"
          rows="4"
        ><%= categorie.description %></textarea>
      </div>

      <!-- Photo actuelle -->
      <div class="mb-3">
        <label class="form-label">Photo actuelle</label><br/>
        <% if (categorie.photo) { %>
          <img
            src="<%= categorie.photo %>"
            class="img-thumbnail"
            style="max-height:150px;"
            alt="Photo catégorie"
          />
        <% } else { %>
          <p class="text-muted">Aucune photo</p>
        <% } %>
      </div>

      <!-- Changer la photo -->
      <div class="mb-3">
        <label for="photo" class="form-label">Remplacer la photo (optionnel)</label>
        <input
          type="file"
          id="photo"
          name="photo"
          class="form-control"
          accept="image/*"
        />
      </div>

      <!-- Actions -->
      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">
          <i class="fas fa-save"></i> Enregistrer
        </button>
        <!-- Retour à la page précédente -->
        <button type="button" class="btn btn-secondary" onclick="history.back()">
          <i class="fas fa-arrow-left"></i> Annuler
        </button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
